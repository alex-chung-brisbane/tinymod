{
    "manifest_version": 3,
    "name": "My Extension",
    "description": "My Extension's description",
    "version": "1.0",
    "background": {
        "service_worker": "scripts/background.js",
        "type": "module"
    },
    "action": {
        "default_title": "My Extension settings",
        "default_popup": "popup/popup.html",
        "default_icon": "images/icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "scripts/content.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [
                "https://*/*"
            ],
            "js": [
                "scripts/main.js"
            ],
            "run_at": "document_end",
            "world": "MAIN"
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "<all_urls>"
            ],
            "resources": [
                "/modules/helpers.js"
            ]
        }
    ],
    "permissions": [
        "contextMenus",
        "activeTab",
        "storage"
    ]
}